generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  userId String @id @unique
  firstName String
  lastName String 
  email String @unique
  password String 
  phone String
  organisations Organisation[]
}

model Organisation {
  orgId String @id @unique
  name String
  description String
  users User[]
}
model OrganisationUser {
  userId String
  user @relation(field [userId], references [userId])
  orgId String
  organisation @relation(field [orgId], references [orgId])
}